@inherits WebExtensions.MVC.WebLayout<WebExtensions.ViewModels.NewsViewModel>
@{
    Layout = "Shared/_InnerLayout.cshtml";
    ViewBag.Title = "newsItem";
}
<div class="row">
    @if (!Model.HideSideMenu)
    {
        <div class="col-md-2 side-menu">
            @Html.CachedPartial("_SideNav", Model.SideNav, 5, true)
        </div>
    }
    <div class="@(!Model.HideSideMenu?"col-md-10":"col-md-12")">
        @if (!Model.HideTitle)
        {
            <h1 class="orange">@Model.Name</h1>
        }
        <article>
            <img src="@Model.LargeImageUrl" alt="@Model.Name" class="img-responsive f-left img-thumbnail" />
            @Html.Raw(Model.PageBody)
        </article>
    </div>
</div>