@inherits WebExtensions.MVC.WebLayout<WebExtensions.ViewModels.NewsCategoryViewModel>
@{
    Layout = "Shared/_InnerLayout.cshtml";
}
@if (!Model.HideTitle)
{
    <h1 class="orange">@Model.Name</h1>
}
<ul class="category-list">
    @foreach (var item in Model.News)
    {
        <li>
            <figure>
                <img src="@item.SmallImageUrl" alt="@item.Name" />
                <figcaption><a href="@item.Url">@item.Name</a></figcaption>
            </figure>
        </li>
    }
</ul>