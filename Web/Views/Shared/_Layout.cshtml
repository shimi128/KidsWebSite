@inherits WebExtensions.MVC.WebLayout<WebExtensions.ViewModels.BaseViewModel>
@{
    var bodyCss = ViewBag.Title;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Html.CachedPartial("_SEO", Model, 5, true)
    <title>@(string.IsNullOrWhiteSpace(Model.PageTitle) ? Model.Name : Model.PageTitle)</title>
    @Styles.Render("~/css/main")
    @RenderSection("head", false)
    <script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-53199430-1', 'auto');
    ga('send', 'pageview');

    </script>
</head>
    <body class="@bodyCss">
        <div id="fb-root"></div>
        <div>
            <header class="container">
                @Html.CachedPartial("_TopNavigation", Model, 5, true)
            </header>
            <div class="container inner">
                @RenderBody()
            </div>
            <footer>
                <div class="container">
                    @Html.CachedPartial("_Footer", Model.Footer, 5, true)

                </div>
            </footer>
        </div>
        @Scripts.Render("~/scripts/main")
      @RenderSection("scripts",false)
    </body>
</html>
